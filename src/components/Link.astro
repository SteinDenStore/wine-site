---
// Henter parametrene fra Astro.props
const {
  href = "#",
  target = "_self",
  variant = "tekstlink",
  size = "inherit",
} = Astro.props;
// Definer den styling (Tailwind classes), der gør sig gældende for alle knapper
const linkStyling = "";
// Definer den styling (Tailwind classes), der gør sig gældende for de forskellige varianter
const variantClasses = {
  tekstlink: "underline font-bold",
  primary: "btn my-2 btn-secondary",
  secondary: "btn my2 btn-secondary",
};
// Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  inherit: "",
  large: "btn-lg",
  medium: "",
  small: "btn-sm",
};
---

<!--Sæt classes for den pågældende knap sammen ved hjælp af Astros class:list -->
<a
  href={href}
  target={target}
  class:list={[linkStyling, variantClasses[variant], sizeClasses[size]]}
  ><slot /></a
>
